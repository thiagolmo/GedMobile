<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <FrameLayout
        android:layout_width="178dp"
        android:layout_height="222dp"
        android:layout_gravity="center_horizontal|bottom">

        <Button
            android:layout_width="226dp"
            android:layout_height="wrap_content"
            android:text="ENTRAR"
            android:id="@+id/button2"
            android:layout_gravity="center_horizontal|top"
            style="@android:style/ButtonBar"
            android:background="#F2501D"
            android:onClick="onEntrar" />

        <Button
            android:layout_width="207dp"
            android:layout_height="wrap_content"
            android:text="NOVO USUÁRIO"
            android:id="@+id/button3"
            android:layout_gravity="center"
            style="@android:style/ButtonBar"
            android:background="#F2501D" />

        <FrameLayout
            android:layout_width="235dp"
            android:layout_height="216dp"
            android:layout_gravity="left|bottom">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="   Power By JTG Softwares"
                android:textColor="@android:color/darker_gray"
                android:id="@+id/textView3"
                android:layout_gravity="left|bottom" />
        </FrameLayout>
    </FrameLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

    </GridLayout>

    <RelativeLayout
        android:layout_width="180dp"
        android:layout_height="19dp"
        android:layout_gravity="right|center_vertical"
        >

    </RelativeLayout>

    <ImageView
        android:layout_width="251dp"
        android:layout_height="251dp"
        android:id="@+id/imageView2"
        android:layout_gravity="center_horizontal|top"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="305dp"
        android:layout_height="111dp"
        android:layout_gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Bem vindo ao Ged Mobile"
            android:id="@+id/textView"
            android:layout_row="1"
            android:layout_column="1"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Ao utilizar este aplicativo, você concorda com nossos termos de uso"
            android:id="@+id/textView2"
            android:layout_alignBottom="@+id/textView3"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_row="5"
            android:layout_column="1"
            style="@style/AppTheme"
            android:gravity="center" />
    </LinearLayout>


</FrameLayout>